<div>
    <h1 id="main-title">Products</h1>
    <div id="product-list-container">
        {{#each products}}
            <div id="product-item">
                {{#if havePics}}
                    <div class="thumbnail-container">
                        <img src="../../statics/img/{{thumbnails.0.originalName}}" alt="">
                    </div>
                {{else}}
                    <p id="no-image">No image</p>
                {{/if}}
                <p id="title">{{title}}</p>
                <p>${{price}}</p>
            </div>
        {{/each}}
    </div>
    <form action="/realtimeproducts" id="add-realtimeproducts-form" class="add-product-form" method="post" enctype="multipart/form-data">
        <h2>Añadir Producto</h2>
        <input type="text" placeholder="Nombre del producto" name="title">
        <input type="text" placeholder="Descripción" name="description">
        <input type="text" placeholder="Código" name="code">
        <input type="number" placeholder="Precio" name="price">
        <input type="number" placeholder="Cantidad en stock" name="stock">
        <input type="text" placeholder="Categoría" name="category">
        <input type="file" name="files" multiple>
        <input type="submit" value="Cargar">
    </form>
</div>

<script src="socket.io/socket.io.js"></script>
<script src="statics/js/realTimeProducts.js"></script>